<div class="text-center">
  <v-menu offset-y>
    <template v-slot:activator="{ on }">
      <v-btn
        color="#343B3F"
        dark
        v-on="on"
        elevation=0
      >
        <% if current_user.image.attached? %>
          <%= image_tag current_user.display_image, :size =>'25x25' %>
        <% else %>
          <%= image_tag "default_user.jpg", size: "25x25" %>
        <% end %>
        <span class="<%= 'notice' if unchecked_notifications.any? %>"></span>
        <b class="ml-2 dropdown-caret"></b>
      </v-btn>
    </template>
    <v-list>
      <v-list-item>
        <v-list-item-title><%= link_to "マイページ", current_user %></v-list-item-title>
      </v-list-item>
      <v-list-item>
        <v-list-item-title><%= link_to "通知", user_notifications_path(current_user) %></v-list-item-title>
      </v-list-item>
      <v-list-item>
        <v-list-item-title><%= link_to '設定', edit_user_path(current_user) %></v-list-item-title>
      </v-list-item>
      <v-list-item>
        <v-list-item-title><%= link_to "ログアウト", :logout, method: :post %></v-list-item-title>
      </v-list-item>
    </v-list>
  </v-menu>
</div>