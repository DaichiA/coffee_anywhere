<ul class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <% if current_user.image.attached? %>
      <%= image_tag current_user.display_image, :size =>'25x25', class: 'user_image' %>
    <% else %>
      <%= image_tag "default_user.jpg", size: "25x25", class: 'user_image' %>
    <% end %>
    <b class="caret"></b>
  </a>

  <ul class="dropdown-menu">
    <%= link_to "マイページ", current_user, class:"dropdown-item text-dark" %>
    <% if logged_in? %>
      <%= link_to '設定', edit_user_path(current_user), class:"dropdown-item text-dark" %>
    <% end %>
    <%= link_to "ログアウト", :logout, method: :post, class:"dropdown-item text-dark" %>
  </ul>
