<% provide(:title, "ログイン") %>


<div class="row mt-5">
  <div class="col-lg-10 offset-lg-1">
    <div class="login_left border rounded p-4 mt-5">
      <h1 class="mb-5">COFFEE ANYWHEREにログイン</h1>
      
      <div class="row border-top">
        <div class="sns col-10 offset-1 col-lg-6 offset-lg-0 mt-4 pb-4 ">
          <%= render partial: 'shared/sns', locals: { phrase: 'ログイン' } %>
          <p class="border-top pt-4">登録せずに試すにはこちら</p>
          <div class="text-center pb-4 border-bottom">
            <%= render 'shared/easy_login' %>
          </div>
          <p class="pt-3 text-black-50 pb-4 border-bottom">COFFEE ANYWHEREのアカウントを持っていない場合は<span><%= link_to '新規登録', new_user_path, class: "text-info" %></span>から。</p>
        </div>
        <div class="col-10 offset-1 col-lg-6 offset-lg-0 mt-4">
          <%= form_with(url:login_path, local: true) do |f| %>
        
            <%= f.email_field :email, placeholder: 'メールアドレス', class:'form-control mb-2' %>

            <%= f.password_field :password, placeholder: 'パスワード', class: 'form-control' %>
            <p class="mt-2"><%= link_to 'パスワードをお忘れですか？', new_password_reset_path, class:"text-info font-weight-bold" %></p>
            
            <%= f.submit "ログイン", class: "btn btn-dark mt-4" %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>