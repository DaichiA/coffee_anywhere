<div class="search_form form-row clearfix">
  <%= search_form_for(@q, url: shops_path) do |f| %>

    <%= f.search_field :name_or_address_or_phone_number_or_description_cont, placeholder: "キーワードで検索", class:"search_field col-xs-9 col-xs-offset-1" %>
  
    <!--<%= f.submit class: "search_submit" %>-->
    <%= button_tag type: 'submit', class: "btn btn-warning col-xs-1" do %>
      <i class="fas fa-search search_submit"></i>
    <% end %>
  <% end %>
</div>