<%= form_with(model:@shop) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name, "店名" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :image, "画像" %>
  <span class="image">
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
  </span>

  <%= f.label :tag_name, "タグ" %> (半角スペースで区切ってください)
  <% if @tag_list %>
    <%= f.text_field :tag_name, value:@tag_list %>
    <p>既存のタグ</p>
    <% @every_tags.each do |tag| %>
      <p class="badge badge-secondary"><%= tag.tag_name %></p>
    <% end %>
  <% else %>
    <%= f.text_field :tag_name %>
  <% end %>

  <br>

  <%= f.label :adddress, "住所" %>
  <%= f.text_field :address, class: 'form-control' %>

  <%= f.label :phone_number, "電話番号" %> (ハイフン 「-」 等は付けず、数字だけ入力してください)
  <%= f.text_field :phone_number, class: 'form-control' %>

  <%= f.label :business_hours, "営業時間" %>
  <%= f.text_field :business_hours, class: 'form-control' %>

  <%= f.label :description, "説明" %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary " %>
<% end %>