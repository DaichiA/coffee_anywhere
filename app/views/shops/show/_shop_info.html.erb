<div class="shop_info pt-5">
  <div class="row justify-content-between mx-1">
    <h3 class="pb-3">店舗情報</h3>
    <div class="d-flex align-items-center">
      <!-- twitterシェア -->
      <%= link_to 'Twitter', "https://twitter.com/share?ref_src=twsrc%5Etfw", class: "twitter-share-button", data: { lang:"ja" }%>

      <!-- fbシェア -->
      <span class="fb-share-button mx-2 mb-1" data-href="<%= shop_url(@shop) %>" data-layout="button" data-size="small"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=<%= shop_url(@shop) %>&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">シェア</a></span>

      <!-- lineシェア -->
      <div class="line-it-button" data-lang="ja" data-type="share-a" data-ver="3" data-url="<%= shop_url(@shop) %>" data-color="default" data-size="small" data-count="false" style="display: none;"></div>
      
    </div>
  </div>
  <table class="table">
    <tbody>
      <tr>
        <th scope="row" class="active col-xs-3 align-middle">店名</th>
        <td><%= @shop.name %></td>
      </tr>
      <tr>
        <th scope="row" class="active">お問い合わせ電話番号</th>
        <td><%= @shop.phone_number %></td>
      </tr>
      <tr>
        <th scope="row" class="active">住所</th>
        <td>
          <%= @shop.address %><br>
          <br>
          <%= render 'shops/show/map' %>
          <div id="map"></div>
        </td>
      </tr>
      <tr>
        <th scope="row" class="active">営業時間</th>
        <td><%= @shop.business_hours %></td>
      </tr>
      <tr>
        <th scope="row" class="active">定休日</th>
        <td><%= @shop.dayoff %><br></td>
      </tr>
    </tbody>
  </table>
</div>

<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

<!--Vue導入後表示されなかったFBシェアボタンがtype="application/javascript"を記述後表示されるようになった-->
