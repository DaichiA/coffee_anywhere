<% provide(:title, 'All users') %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <% if user.image.attached? %>
        <%= image_tag user.display_image, :size =>'50x50' %>
      <% else %>
        <%= image_tag("default_user.jpg", :size => "50x50") %>
      <% end %>
      <%= link_to user.name, user, class: "user_name" %>
    </li>
  <% end %>
</ul>